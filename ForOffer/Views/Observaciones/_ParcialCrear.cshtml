@model ForOffer.Controllers.NuevaObservacion

@{
    var places = Model.Lugares;
}

<!-- The Modal -->
<div class="modal" id="nuevo">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- aqui va el form -->
            <form asp-controller="Observaciones" asp-action="ModalCrear" method="post">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Inserte los datos</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Observacion.GeneralObservationText" class="control-label"></label>
                        <textarea asp-for="Observacion.GeneralObservationText" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="Observacion.GeneralObservationText" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Observacion.GeneralObservationServicesId" class="control-label"></label>
                        <select asp-for="Observacion.GeneralObservationServicesId" class="form-control" asp-items="places">
                            <option value="">Selecione uno</option>
                        </select>
                        <span asp-validation-for="Observacion.GeneralObservationServicesId" class="text-danger"></span>
                    </div>
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button asp-controller="Observaciones" asp-action="ModalCrear" type="submit" class="btn btn-success" >Guardar Observacion</button>
                </div>
            </form>
        </div>
    </div>
</div>
